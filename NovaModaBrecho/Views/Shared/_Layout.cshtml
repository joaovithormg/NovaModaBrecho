<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nova Moda</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
<header class="main-header">
    <div class="logo">
        <a asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/images/logo-nova-moda.png" alt="Nova Moda">
        </a>
    </div>
    <nav class="main-nav">
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="Clothes" asp-action="Clothes">Roupas</a></li>
            <li><a asp-area="" asp-controller="Shoes" asp-action="Shoes">Calçados</a></li>
            <li><a asp-area="" asp-controller="Acessories" asp-action="Acessories">Acessórios</a></li>
        </ul>
    </nav>
</header>

<main role="main" class="pb-3">
    @RenderBody()
</main>

<footer class="main-footer">
    <div class="footer-content">
        <div class="footer-logo">
            <img src="~/images/logo-nova-moda.png" alt="Nova Moda">
        </div>
        <p class="copyright">Grupo Snorlax &copy; 2025. Todos os Direitos Reservados.</p>
        <div class="social-icons">
            <a href="#" class="social-icon"><img src="~/images/icons/facebook-icon.png" alt="Facebook"></a>
            <a href="#" class="social-icon"><img src="~/images/icons/instagram-icon.png" alt="Instagram"></a>
            <a href="#" class="social-icon"><img src="~/images/icons/linkedin-icon.png" alt="LinkedIn"></a>
        </div>
    </div>
</footer>

<button class="add-button">+</button>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>