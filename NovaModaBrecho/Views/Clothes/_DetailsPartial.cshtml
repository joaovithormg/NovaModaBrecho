@model NovaModaBrecho.Models.Cloth

<div class="product-image">
    <img src="@Model.Url" alt="@Model.Name" />
</div>

<div class="product-info">
    <h2>@Model.Name</h2>
    <p><strong>Marca:</strong> @Model.Brand</p>
    <p><strong>Origem:</strong> @Model.Origin</p>
    <p><strong>Tamanho:</strong> @Model.ClothesSize</p>
    <p><strong>Categoria:</strong> @Model.ClothesCategory</p>
    <p><strong>Cor:</strong> @Model.Color</p>
    <p><strong>Condição:</strong> @Model.Condition</p>
    <p><strong>Quantidade:</strong> @Model.Quantity</p>
    <p><strong>Preço original:</strong> R$ @Model.OriginalPrice.ToString("F2")</p>
    <p><strong>Preço com desconto:</strong> R$ @Model.CalculateDiscountedSalePrice().ToString("F2")</p>
</div>

<form asp-action="Delete" asp-controller="Clothes" asp-route-id="@Model.Id" method="post" class="delete-form">
    @Html.AntiForgeryToken()
    <button type="submit" class="deleteItem-button" title="Deletar item">
        <img src="https://img.icons8.com/ios-glyphs/30/fa314a/trash.png" alt="Deletar" />
    </button>
</form>

